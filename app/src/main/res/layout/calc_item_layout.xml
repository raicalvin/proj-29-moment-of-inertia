<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/calc_item_linear_layout">

    <ImageView
        android:id="@+id/calc_item_thumbnail_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calc_item_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Testing" />

        <TextView
            android:id="@+id/calc_item_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This is a test of the single calc item layout that will be displayed in the item." />

    </LinearLayout>

</LinearLayout>